entrypoint = "index.html"
hidden = [".config"]
modules = ["nodejs-20", "web", "python-3.11"]

[nix]
channel = "stable-25_05"

[deployment]
publicDir = "/"
deploymentTarget = "static"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5001"
waitForPort = 5001

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5001
externalPort = 3000

[agent]
expertMode = true
